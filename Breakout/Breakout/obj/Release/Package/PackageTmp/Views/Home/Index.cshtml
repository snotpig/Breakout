@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1, maximum-scale=1, user-scalable=no">
    <title>Breakout</title>
    @Styles.Render("~/content/game.css")
</head>
<body>
    <canvas id="canvas" width="600" height="400" class="defw">
    </canvas>
    <div id="game" class="defw">
        <h1>Breakout</h1>
        <hr>
        <h2>Controls</h2>
        <ul>
            <li>Move paddle (L/R) using arrow keys or mouse</li>
            <li>Space Bar - Boosts paddle speed when using arrow keys</li>
            <li>'P' key or click on icon - Toggle pause</li>
            <li>'S' key or click on icon - Toggle sound</li>
            <li>'W' key or Double-click - Toggle size </li>
            <li></li>
        </ul>
        <button id="btn">Start Game</button>
    </div>

    <div id="hs-panel" class="defw">
        <div id="hs-dlg">
            <h1 class="hs-title">Congratulations!</h1>
            <h3>You achieved a high score.</h3>
            <input type="text" id="txt-name" placeholder="Enter your name"/>
            <button id="btn-submit">Submit</button>
        </div>
        <div id="hs-list">
            <h1 class="hs-title">High Scores</h1>
            <table id="hs-tbl">
                @for (int i = 0; i < 6; i++)
            {
                var nid = "hs-n" + i;
                var sid = "hs-s" + i;
                    <tr class="hs-row">
                        <td id="@nid"></td>
                        <td id="@sid"></td>
                    </tr>
                }
            </table>
        </div>
    </div>
    @Scripts.Render("~/bundles/js")
</body>
</html>
