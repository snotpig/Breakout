@{
    Layout = null;
}

<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Breakout</title>
    <link rel="stylesheet" href="~/Content/game.css" />
</head>
<body>
    <canvas id="canvas" width="600" height="400">
    </canvas>
    <div id="game">
        <h1>Breakout</h1>
        <hr>
        <h2>Controls</h2>
        <ul>
            <li>Move paddle (L/R) using arrow keys or mouse</li>
            <li>Space Bar - Boosts paddle speed when using arrow keys</li>
            <li>'P' key or click on icon - Toggle pause</li>
            <li>'S' key or click on icon - Toggle sound</li>
            <li>'W' key or Double-click - Toggle size </li>
            <li></li>
        </ul>
        <button id="btn">Start Game</button>
    </div>

    <div id="hs_panel">
        <div id="hs_dlg">
            <h1 class="hs_title">Congratulations!</h1>
            <h3>You achieved a high score.</h3>
            <input type="text" id="txt_name" placeholder="Enter your name"/>
            <button id="btn_submit">Submit</button>
        </div>
        <div id="hs_list">
            <h1 class="hs_title">High Scores</h1>
            <table id="hs_tbl">
                @for (int i = 0; i < 6; i++)
            {
                var nid = "hs_n" + i;
                var sid = "hs_s" + i;
                    <tr class="hs_row">
                        <td id="@nid"></td>
                        <td id="@sid"></td>
                    </tr>
                }
            </table>
        </div>
    </div>


    <script src="~/scripts/ld.js"></script>
    <script src="~/scripts/bo.js"></script>
    <script src="~/Scripts/ga.js"></script>
</body>
</html>
